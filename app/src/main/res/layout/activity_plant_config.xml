<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlantConfig">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ServerConfig_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_blue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/design_default_color_background"
        app:titleTextColor="@color/design_default_color_primary">

        <ImageView
            android:id="@+id/Img_Back_Server_Config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"

            android:text="Server Configure"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="" />

        <ImageView
            android:id="@+id/Img_Logout_Server_Config"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_login_24" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/txt_IpAddressConfigure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custom_dialog5"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:hint="enter ip address"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />


    <EditText
        android:id="@+id/txt_BaseAddressConfigure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custom_dialog5"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:hint="enter belasset api"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <Button
            android:id="@+id/btn_PlantConfir_cancel"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_backgrond2"
            android:gravity="center"
            android:padding="3dp"
            android:text="CANCEL"
            android:textColor="@color/theme_blue"
            android:textSize="@dimen/_10sdp"
            android:typeface="sans" />
        <Button
            android:id="@+id/btn_PlantConfir_update"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"

            android:background="@drawable/custom_dialog3"
            android:gravity="center"
            android:padding="3dp"
            android:text="UPDATE"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:typeface="sans" />




    </LinearLayout>
</LinearLayout>